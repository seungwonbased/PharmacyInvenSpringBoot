<?xml version="1.0" encoding="UTF-8"?>
<!-- Sql Mapper -->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.pharmacyinven.mapper.DrugMapper">
    <resultMap type="DrugVO" id="DrugRM">
        <id property="pharmacyVO.pharmaId" column="pharmaId"/>
        <result property="pharmacyVO.name" column="name"/>
        <result property="pharmacyVO.latitude" column="latitude"/>
        <result property="pharmacyVO.longitude" column="longitude"/>
        <result property="pharmacyVO.phone" column="phone"/>
    </resultMap>
    <select id="getDrugByPharmacy" resultMap="DrugRM">
        SELECT d.drugId, d.drugName, d.dosage, d.company, p.pharmaId, p.name, p.latitude, p.longitude, p.phone
        FROM drug d, pharmacy p
        WHERE d.pharmaId=p.pharmaId AND d.pharmaId=#{pharmaId}
    </select>
    <insert id="insertDrugTest">
        INSERT INTO drug VALUES (#{drugId}, #{drugName}, #{dosage}, #{company},1)
    </insert>
    <select id="searchDrug" resultMap="DrugRM">
    	SELECT d.drugId, d.drugName, d.dosage, d.company, p.pharmaId, p.name, p.latitude, p.longitude, p.phone
        FROM drug d, pharmacy p
        WHERE d.pharmaId=p.pharmaId AND d.drugName=#{drugName}
    </select>
    <insert id="insertDrugInCart">
        INSERT INTO cart(id,drugId) VALUES (#{id}, #{drugId})
    </insert>
</mapper>